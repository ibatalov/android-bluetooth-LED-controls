<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:clickable="true">

    <TextView
        android:clickable="false"
        android:id="@+id/saved_settings_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="Name"
        android:textColor="@color/palette_color_2_dark_1"
        android:lines="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"/>

    <LinearLayout
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:clickable="false"
            android:id="@+id/saved_settings_item_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="Date"
            android:ellipsize="end"
            android:textColor="@color/palette_color_1_dark_1"
            android:layout_weight="0"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"/>

        <TextView
            android:clickable="false"
            android:id="@+id/saved_settings_item_details"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:lines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="settings\' details blablabalblablalblkhjhkghkjhkjgjkgkg"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"/>

    </LinearLayout>

</LinearLayout>